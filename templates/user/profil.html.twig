{% extends 'base.html.twig'%}
{% block title %}
    Mon profil | {{ parent() }}
{% endblock %}
{% block main %}
    <h1>{{ user.pseudo }}</h1>
    <div class="container">
        <div class="row align-items-center">
            <div class="col">

                {% if user.photo %}
                    <img src="{{ app.request.getUriForPath(vich_uploader_asset(user, 'photoFile')) }}" alt="Photo du profil" class="img-fluid img-thumbnail">
                {% else %}
                    <img src="{{ app.request.getUriForPath('/uploads/images/profils/profil-vide.png') }}" alt="Photo du profil" class="img-fluid img-thumbnail">
                {% endif %}

            </div>
            <div class="col">
                <p>Prénom : {{ user.prenom }}</p>
                <p>Nom : {{ user.nom }}</p>
                <p>Téléphone : {{ user.telephone }}</p>
                <p>Email : {{ user.email }}</p>
                <p>Campus : {{ user.campus.nom }}</p>

            </div>
            <div class="col">

            </div>
        </div>
        <div class="row align-items-center">
            <div class="col"></div>
            <div class="col">
                <form>
                    <input type = "button" value = "Retour!"  onclick = "history.back()">
                </form>
            </div>
            <div class="col"></div>

        </div>


    </div>



{% endblock %}